{
  "name": "lighter-next",
  "version": "0.1.0",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "dev": "yarn --cwd packages/web dev",
    "build": "npm run build:components && npm run build:web",
    "build:components": "yarn --cwd packages/components build",
    "build:web": "yarn --cwd packages/web build",
    "release": "npm run build && npx changeset publish",
    "test": "jest --runInBand --config ./jest.config.js",
    "lint": "eslint --fix ."
  },
  "dependencies": {
    "react": "~16.14.0",
    "react-dom": "~16.14.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.11.2",
    "@testing-library/dom": "~7.26.3",
    "@testing-library/jest-dom": "~5.11.5",
    "@types/node": "~14.14.6",
    "@types/react": "~16.9.55",
    "@types/react-dom": "~16.9.9",
    "@typescript-eslint/eslint-plugin": "~4.6.0",
    "@typescript-eslint/parser": "~4.6.0",
    "babel-eslint": "~10.1.0",
    "babel-jest": "~26.6.1",
    "cheerio": "~1.0.0-rc.3",
    "cross-spawn": "~7.0.3",
    "eslint": "~7.12.1",
    "eslint-config-react-app": "~6.0.0",
    "eslint-plugin-flowtype": "~5.2.0",
    "eslint-plugin-import": "~2.22.1",
    "eslint-plugin-jsx-a11y": "~6.4.1",
    "eslint-plugin-react": "~7.21.5",
    "eslint-plugin-react-hooks": "~4.2.0",
    "get-port": "~5.1.1",
    "husky": "~4.3.0",
    "jest-cli": "~26.6.1",
    "lint-staged": "~10.5.0",
    "node-fetch": "~2.6.1",
    "prettier": "~2.1.2",
    "tree-kill": "~1.2.2",
    "typescript": "~4.0.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --cache --fix",
      "prettier --write"
    ],
    "*.{json}": [
      "prettier --write"
    ]
  }
}
