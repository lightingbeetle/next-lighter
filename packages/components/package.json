{
  "name": "components",
  "version": "0.2.0",
  "private": true,
  "main": "dist/index.js",
  "module": "dist/index.module.js",
  "jsnext:main": "dist/index.module.js",
  "exports": {
    ".": "./dist/index.module.js",
    "./static": "./dist/static.module.js",
    "./styles.css": "./dist/index.css",
    "./styles.scss": "./src/styles/index.scss",
    "./tokens.scss": "./src/tokens/index.scss"
  },
  "style": "./dist/index.css",
  "files": [
    "dist",
    "public"
  ],
  "types": "dist/src/index.d.ts",
  "scripts": {
    "build": "run-s clean 'build:*'",
    "clean": "rimraf dist",
    "build:components": "node ./esbuild.components.js",
    "build:icons": "svg-sprite --dest dist --symbol --symbol-dest . --symbol-sprite icons-sprite.svg  src/icons/*.svg",
    "build:types": "tsc --declaration  --emitDeclarationOnly --noEmit false --outDir dist -p ./tsconfig.json",
    "test": "NODE_ENV=test jest --maxWorkers=1"
  },
  "dependencies": {
    "@lighting-beetle/lighter-hooks": "workspace:^",
    "a11y-dialog": "^7.5.0",
    "classnames": "^2.3.1",
    "downshift": "^6.1.7",
    "jest-axe": "^6.0.0",
    "polished": "^4.1.3",
    "preact": "~10.5.14",
    "preact-render-to-string": "~5.1.19",
    "react-dropzone": "^14.2.2",
    "react-ranger": "^2.1.0",
    "react-table": "^7.8.0",
    "usehooks-ts": "^2.1.1"
  },
  "browserslist": ">1%, not ie 11, not op_mini all",
  "devDependencies": {
    "@esbuild-plugins/esm-externals": "0.0.6",
    "@types/jest-axe": "^3.5.4",
    "@types/react-ranger": "^2.0.1",
    "@types/react-table": "^7.7.2",
    "esbuild": "^0.13.3",
    "esbuild-plugin-alias": "^0.1.2",
    "esbuild-sass-plugin": "^1.5.5",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^27.2.3",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "sass": "~1.42.1",
    "svg-sprite": "~1.5.2"
  }
}
