{
  "name": "components",
  "version": "0.1.0",
  "private": true,
  "main": "dist/index.js",
  "module": "dist/index.es.js",
  "jsnext:main": "dist/index.modern.js",
  "exports": {
    ".": "./dist/index.modern.js",
    "./static": "./dist/static.modern.js"
  },
  "files": [
    "dist",
    "public"
  ],
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "npm-run-all build:*",
    "build:components": "microbundle src/index.ts src/static.ts --jsx React.createElement --jsxFragment React.Fragment --external react,react-dom",
    "build:icons": "svg-sprite --dest dist --symbol --symbol-dest . --symbol-sprite icons-sprite.svg  src/icons/*.svg",
    "test": "jest"
  },
  "dependencies": {
    "@lighting-beetle/lighter-hooks": "1.0.0",
    "@lighting-beetle/lighter-styleguide": "5.0.0-alpha.1",
    "classnames": "^2.2.6",
    "polished": "^4.0.5"
  },
  "browserslist": ">1%, not ie 11, not op_mini all",
  "devDependencies": {
    "identity-obj-proxy": "^3.0.0",
    "jest": "^26.6.3",
    "microbundle": "^0.13.0",
    "npm-run-all": "^4.1.5",
    "sass": "~1.30.0",
    "svg-sprite": "~1.5.0"
  }
}
