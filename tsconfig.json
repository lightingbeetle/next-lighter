{
  "compilerOptions": {
    "jsx": "react",
    "module": "esnext",
    "target": "es5",
    "allowJs": true,
    "skipLibCheck": true,
    "declaration": true,
    "lib": ["dom", "esnext"],
    "esModuleInterop": true,
    "moduleResolution": "node",
    "isolatedModules": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@lighting-beetle/lighter-hooks": [
        "./packages/lighter-hooks/src/index.js"
      ],
      "@lighting-beetle/lighter-styleguide": [
        "./packages/lighter-styleguide/src/index.tsx"
      ],
      "components": ["./packages/components/src/index.js"],
      "components/*": ["./packages/components/src/*"]
    }
  },
  "exclude": ["node_modules", "dist", "out"]
}
